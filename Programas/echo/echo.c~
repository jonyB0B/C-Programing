int
main(int argc, char *argv[])
{
  char *home ;
  int i = 0;
  if (strcmp( argv[1], "-n") == 0){
    for (i = 2;i<argc;i++){
      if(strcmp( argv[i], "CASA") == 0){
        home = getenv("HOME");
  		argv[i]= home;
      }
      printf("%s ",argv[i]);
    }
  }else{
    for (i = 1;i<argc;i++){
      printf("%s ",argv[i]);
    }
    printf("%s","\n");
  }
	exit(EXIT_SUCCESS);
}
